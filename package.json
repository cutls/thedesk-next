{
	"private": true,
	"main": "main-build/index.js",
	"name": "thedesk-next",
	"author": {
		"name": "cutls",
		"email": "p@cutls.dev",
		"url": "https://cutls.dev"
	},
	"version": "25.1.1",
	"codename": "Aiko",
	"packageManager": "pnpm@10.5.2",
	"scripts": {
		"clean": "rimraf dist main renderer/out renderer/.next",
		"dev": "npm run build-electron && concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev renderer\" \"electron .\"",
		"build-renderer": "next build renderer",
		"build-electron": "tsc -p electron-src",
		"build": "npm run thirdparty && npm run build-renderer && npm run build-electron && node scripts/toRelativePath.js",
		"pack:mac": "electron-builder --mac --universal",
		"pack:linux": "electron-builder --linux --x64",
		"pack:win": "electron-builder --windows --x64",
		"dist": "npm run build && electron-builder",
		"type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./electron-src/tsconfig.json",
		"lint:fix": "npx @biomejs/biome check --write ./",
		"thirdparty": "license-checker --production --json > thirdparty.json && node scripts/thirdparty.js"
	},
	"dependencies": {
		"@cutls/megalodon": "6.2.5",
		"@emoji-mart/react": "^1.1.1",
		"@rsuite/icons": "^1.4.0",
		"cheerio": "1.1.2",
		"dayjs": "^1.11.18",
		"electron-is-dev": "^3.0.1",
		"electron-next": "^3.1.5",
		"electron-serve": "^3.0.0",
		"electron-window-state": "^5.0.3",
		"emoji-mart": "^5.6.0",
		"font-list": "^2.0.1",
		"next": "^14.2.3",
		"parse-link-header": "^2.0.0",
		"react": "18.2.0",
		"react-blurhash": "^0.3.0",
		"react-dom": "18.2.0",
		"react-draggable": "^4.5.0",
		"react-icons": "5.4.0",
		"react-intl": "^7.1.13",
		"react-resizable": "^3.0.5",
		"react-viewer": "^3.2.2",
		"react-virtuoso": "4.14.1",
		"rsuite": "5.83.3",
		"sanitize-html": "^2.17.0",
		"sass": "^1.93.2",
		"superagent": "^10.0.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.6",
		"@electron/notarize": "^2.5.0",
		"@formatjs/intl-displaynames": "^6.8.13",
		"@types/node": "^14.18.63",
		"@types/react": "^16.14.52",
		"@types/react-dom": "^16.9.24",
		"@types/react-resizable": "^3.0.8",
		"@types/sanitize-html": "^2.11.0",
		"@types/superagent": "^8.1.9",
		"concurrently": "^9.2.1",
		"electron": "37",
		"electron-builder": "26.0.0",
		"license-checker": "^25.0.1",
		"rimraf": "^6.0.1",
		"typescript": "^5.9.3"
	},
	"resolutions": {
		"react": "18.2.0",
		"react-dom": "18.2.0"
	},
	"build": {
		"productName": "TheDesk",
		"appId": "next.top.thedesk",
		"afterSign": "build-tool/notarize.js",
		"asarUnpack": [
			"native/**"
		],
		"files": [
			"main-build",
			"renderer/out",
			"native"
		],
		"win": {
			"target": "msi",
			"icon": "assets/desk.ico"
		},
		"msi": {
			"oneClick": false
		},
		"linux": {
			"target": [
				"zip",
				"deb"
			]
		},
		"mac": {
			"icon": "assets/icon.icns",
			"hardenedRuntime": true,
			"gatekeeperAssess": false,
			"entitlements": "build-tool/entitlements.mac.plist",
			"entitlementsInherit": "build-tool/entitlements.mac.plist",
			"notarize": false
		},
		"dmg": {
			"sign": false
		}
	}
}
