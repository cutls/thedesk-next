{
	"productName": "TheDesk",
	"appId": "next.top.thedesk",
	"afterSign": "build-tool/notarize.js",
	"asarUnpack": [
		"native/**"
	],
	"files": [
		"main-build",
		"renderer/out",
		"native"
	],
	"win": {
		"target": [
			"msi",
			"appx"
		],
		"icon": "assets/desk.ico"
	},
	"appx": {
		"identityName": "53491Cutls.TheDesk-PC",
		"applicationId": "Cutls.TheDesk-PC",
		"publisherDisplayName": "Cutls",
		"publisher": "CN=629757F5-A5EE-474F-9562-B304A89A9FD1",
		"languages": [
			"JA-JP",
			"EN-US"
		]
	},
	"msi": {
		"oneClick": false
	},
	"linux": {
		"target": [
			"zip",
			"deb"
		]
	},
	"mac": {
		"icon": "assets/icon.icns",
		"target": ["dmg"],
		"hardenedRuntime": true,
		"gatekeeperAssess": false,
		"entitlements": "build-tool/entitlements.mac.plist",
		"entitlementsInherit": "build-tool/entitlements.mac.plist",
		"notarize": false,
		"category": "public.app-category.social-networking"
	},
	"dmg": {
		"sign": false
	}
}
